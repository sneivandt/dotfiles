root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{ps1,psm1}]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[Dockerfile]
indent_size = 2

[*.sh]
indent_size = 2

[*.json]
indent_size = 2

[*.ini]
indent_size = 2

[*.{vim,vimrc}]
indent_size = 2

[{.gitignore,.gitattributes}]
indent_size = 2

[*.{psd1,psxml}]
indent_style = space
indent_size = 4
