{
    // GitHub Copilot settings
    "github.copilot.enable": {
        "*": true,
        "shellscript": true,
        "powershell": true,
        "ini": true,
        "markdown": true
    },
    // Increase git file limit warning threshold
    "git.ignoreLimitWarning": true,
    // Exclude certain files and directories from search
    "search.exclude": {
        "symlinks/vim/pack/plugins": true,
        "symlinks/config/nvim": true,
        "extern": true,
        "**/.git": true,
        "**/__pycache__": true,
        "**/*.log": true
    },
    // File associations
    "files.associations": {
        "*.ini": "ini",
        "*.sh": "shellscript",
        ".shellcheckrc": "properties",
        "dotfiles.sh": "shellscript",
        "install.sh": "shellscript",
        "Xresources": "properties",
        "Xdefaults": "properties",
        "bash_profile": "shellscript",
        "bashrc": "shellscript",
        "zprofile": "shellscript",
        "zshenv": "shellscript",
        "zshrc": "shellscript",
        "xinitrc": "shellscript",
        "nvimrc": "lua",
        "vimrc": "lua"
    },
    // Formatting - enforce no trailing whitespace (critical for this repo)
    "files.trimTrailingWhitespace": true,
    // Editor settings
    "editor.renderWhitespace": "boundary",
    "editor.detectIndentation": false,
    // Shell script settings
    "[shellscript]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.defaultFormatter": null
    },
    // PowerShell settings
    "powershell.scriptAnalysis.enable": true,
    "[powershell]": {
        "editor.insertSpaces": true
    },
    // Markdown
    "[markdown]": {
        "files.trimTrailingWhitespace": true,
        "editor.wordWrap": "on",
        "editor.quickSuggestions": {
            "comments": "on",
            "strings": "on",
            "other": "on"
        }
    },
    // INI files
    "[ini]": {
        "editor.tabSize": 2
    },
    // YAML settings (for GitHub Actions)
    "yaml.schemas": {
        "https://json.schemastore.org/github-workflow.json": [
            ".github/workflows/*.yml",
            ".github/workflows/*.yaml"
        ]
    }
}
