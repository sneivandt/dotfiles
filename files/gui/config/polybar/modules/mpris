#!/bin/bash

player_status=$(playerctl status 2>/dev/null)
if [[ $? -eq 0 ]]
then
  metadata=()
  artist="$(playerctl metadata artist)"
  if [[ -n $artist ]]
  then
    metadata+=("$artist")
  fi
  metadata+=("$(playerctl metadata title)")
fi

if [[ $player_status = "Playing" ]]
then
  echo "ï†¼ $(printf "%s - " "${metadata[@]}" | cut -d "-" -f 1-${#metadata[@]})"
else
  echo " "
fi