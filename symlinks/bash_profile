#!/usr/bin/env bash

# Guard against multiple sourcing
[ -n "$BASH_PROFILE_LOADED" ] && return
export BASH_PROFILE_LOADED=1

# Global profile (optional)
[ -f /etc/profile ] && . /etc/profile

# Profile
if [ -f ~/.config/shell/profile.sh ]; then
  . ~/.config/shell/profile.sh
else
  echo "Warning: ~/.config/shell/profile.sh not found" >&2
fi

# GUI Profile (optional)
[ -f ~/.config/shell/profile-desktop.sh ] && . ~/.config/shell/profile-desktop.sh

# GUI Arch Profile (optional)
[ -f ~/.config/shell/profile-arch-desktop.sh ] && . ~/.config/shell/profile-arch-desktop.sh