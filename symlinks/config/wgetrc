# Set file type based on content-type if it is absent
adjust_extension = on

# Use the server-provided last modification date, if available
timestamping = on

# Retry limit
tries = 3

# Retry timeout in seconds
timeout = 60

# Use the last component of a redirection URL for the local file name
trust_server_names = on

# Honor Content-Disposition header
content_disposition = on

# Continue getting a partially-retrieved file
continue = on

# Disable history
hsts-file = /dev/null
