" FZF {{{

" Use fzf for fuzzy finding (replaces ctrlp)
let g:fzf_command_prefix = 'Fzf'

" Key mappings
nnoremap <c-p> :FzfFiles<cr>
nnoremap <leader>. :FzfTags<cr>
nnoremap <leader>b :FzfBuffers<cr>
nnoremap <leader>/ :FzfRg<cr>

" Use ripgrep if available for faster searching
if executable('rg')
  let $FZF_DEFAULT_COMMAND = 'rg --files --hidden --follow --glob "!.git/*"'
endif

" Customize fzf colors to match vim colorscheme
let g:fzf_colors = {
      \ 'fg':      ['fg', 'Normal'],
      \ 'bg':      ['bg', 'Normal'],
      \ 'hl':      ['fg', 'Comment'],
      \ 'fg+':     ['fg', 'CursorLine', 'CursorColumn', 'Normal'],
      \ 'bg+':     ['bg', 'CursorLine', 'CursorColumn'],
      \ 'hl+':     ['fg', 'Statement'],
      \ 'info':    ['fg', 'PreProc'],
      \ 'border':  ['fg', 'Ignore'],
      \ 'prompt':  ['fg', 'Conditional'],
      \ 'pointer': ['fg', 'Exception'],
      \ 'marker':  ['fg', 'Keyword'],
      \ 'spinner': ['fg', 'Label'],
      \ 'header':  ['fg', 'Comment']
      \ }

" }}}
